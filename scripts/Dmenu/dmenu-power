#!/bin/bash

shutdown=" Shutdown"
reboot=" Reboot"
logout=" Logout"

# Variable passed to rofi
options="$shutdown\n$reboot\n$logout"

chosen="$(echo -e "$options" | dmenu -i -p "Power-Menu " )"
case $chosen in
    $shutdown)
        poweroff
	;;
    $reboot)
        reboot
        ;;
    $logout)
        pkill -KILL -u $USER
        ;;
esac
